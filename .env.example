# Pinnity Application - Environment Configuration Example
# Make a copy of this file as .env and fill in the values
# NEVER commit your actual .env file to version control

# =====================================================================
# SECURITY SETTINGS
# =====================================================================
# Generate secure values using: `npx ts-node ./src/config/generateSecrets.ts`

# Required in production - JWT signing secret (min 32 chars)
JWT_SECRET=replace_with_secure_random_string_at_least_32_chars_long

# Required in production - Cookie signing secret (min 32 chars)
COOKIE_SECRET=replace_with_secure_random_string_at_least_32_chars_long

# Required in production - CSRF protection secret (min 32 chars)
CSRF_SECRET=replace_with_secure_random_string_at_least_32_chars_long

# Optional - Number of bcrypt hashing rounds (default: 12)
# Higher is more secure but slower
BCRYPT_ROUNDS=12

# Optional - JWT token expiration time (default: 24h)
# Format: [number][s|m|h|d] (seconds, minutes, hours, days)
JWT_EXPIRES_IN=24h

# =====================================================================
# INFRASTRUCTURE SETTINGS
# =====================================================================

# Required - PostgreSQL connection string
DATABASE_URL=postgres://username:password@localhost:5432/database_name

# Optional - Server port (default: 3000)
PORT=3000

# Optional - Server host (default: 0.0.0.0)
HOST=0.0.0.0

# Optional - Whether to trust proxy headers (default: false)
TRUST_PROXY=false

# Optional - Rate limiting window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# Optional - Maximum number of requests in rate limit window (default: 100)
RATE_LIMIT_MAX=100

# =====================================================================
# FEATURE SETTINGS
# =====================================================================

# Optional - Hours before deal expiration to send notification (default: 48)
DEAL_EXPIRATION_NOTIFICATION_HOURS=48

# Optional - Maximum number of images per business deal (default: 10)
MAX_DEAL_IMAGES_PER_BUSINESS=10

# Optional - Maximum number of documents per business (default: 5)
MAX_BUSINESS_DOCUMENTS_COUNT=5

# Optional - Maximum file upload size in bytes (default: 5MB)
MAX_FILE_UPLOAD_SIZE=5242880

# Optional - Comma-separated list of allowed file types (default: jpg,jpeg,png,pdf)
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# =====================================================================
# DEVELOPMENT SETTINGS (not used in production)
# =====================================================================

# Optional - Enable debug logging (default: false)
ENABLE_DEBUG_LOGGING=true

# Optional - Enable mock authentication for development (default: false)
MOCK_AUTH_ENABLED=false

# Optional - Simulate slow network for testing (default: false)
SLOW_NETWORK_SIMULATION=false