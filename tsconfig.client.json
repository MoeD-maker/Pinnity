{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],       // your client alias
      "@shared/*": ["shared/schema.ts"]      // <-- adjust this to wherever your shared schemas actually live
    }
  },
  "include": [
    "client/**/*",
    "shared/**/*",
    "types/**/*"
  ],
  "exclude": [
    "client/**/*.test.tsx",
    "node_modules",
    "dist"
  ]
}