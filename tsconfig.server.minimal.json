{
  "extends": "./tsconfig.json",
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "build", 
    "dist",
    "client/**/*",
    "**/*.test.ts",
    "server/vite.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  }
}